{
  "name": "agent-monimmo-io",
  "private": true,
  "workspaces": [
    "backend",
    "front",
    "marketing-site"
  ],
  "scripts": {
    "dev": "bun run scripts/dev-stack.mjs",
    "dev:backend": "bun run --cwd backend src/index.ts",
    "dev:front:build": "bun build front/src/main.ts --outdir front/dist --target browser --watch",
    "dev:front:serve": "bun run --cwd front src/dev-server.ts",
    "dev:infra:up": "docker compose up -d redis redisinsight",
    "dev:infra:down": "docker compose down",
    "test:backend": "bun run --cwd backend test",
    "build:backend": "bun run --cwd backend build",
    "build:front": "bun run --cwd front build",
    "check:dto:backend": "bun run --cwd backend check:dto",
    "test:coverage:backend": "bun run --cwd backend test:coverage",
    "test:coverage:front": "bun run --cwd front test:coverage",
    "check": "bun run test:backend",
    "ci": "bun run check:dto:backend && bun run build:backend && bun run build:front && bun run test:coverage:backend && bun run test:coverage:front"
  }
}
